{
  "name": "browser-vision-mcp-server",
  "version": "1.0.0",
  "description": "A Model Context Protocol (MCP) server for browser automation and visual analysis capabilities",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "browser-vision-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/index.js",
    "dev": "tsx src/index.ts",
    "test": "npm run build && node dist/example.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol", 
    "browser",
    "automation",
    "playwright",
    "vision",
    "screenshot",
    "analysis",
    "ai"
  ],
  "author": "Kilo Code",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "playwright": "^1.47.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/browser-vision-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/browser-vision-mcp-server/issues"
  },
  "homepage": "https://github.com/your-username/browser-vision-mcp-server#readme"
}